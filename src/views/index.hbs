<!-- Basic -->
<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i>
      Upload and Image
    </h3>
  </div>
  <div class="card-body">
    <form action="/images" method="post" enctype="multipart/form-data">

      <div class="form-group p-2">
        <div class="input-group">
          <input
            type="file"
            accept=".png,jpg,.jpeg"
            name="image"
            class="form-control"
            id="inputGroup"
            required
          />
          <label class="input-group-text" for="inputGroup">Upload</label>
        </div>
      </div>

      <div class="form-group p-2">
        <input
          type="text"
          name="title"
          id="title"
          class="form-control"
          placeholder="Title for the image"
          required
        />
      </div>
      <div class="form-group p-2">
        <textarea
          name="description"
          id="description"
          rows="2"
          class="form-control"
          placeholder="Description for the image"
          required
        ></textarea>
      </div>

      <div class="form-group p-2">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i>
          Upload image
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt2">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i>Recent Uploads</h3>
  </div>
  <div class="card-body text-cent">
    <div class="row">
      {{#each images}}
        <div class="col-md-4">
          {{!-- <a href="/images/{{uniqueId}}">  use not found of method --}}
          <a href="/images/{{filenameId}}">
            <img
              src="/public/upload/{{filename}}"
              class="w-100 h-100 img-thumbnail"
              alt=""
            />
          </a>
        </div>
      {{/each}}
    </div>
  </div>

</div>